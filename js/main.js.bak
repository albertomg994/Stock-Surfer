window.onload = function() {

  var game = new Phaser.Game(800, 600, Phaser.AUTO, '',
    {
      preload: preload,
      create: create,
      update: update,
      render: render
    }
  );

  var num_companies = 3;
  var all_companies_stocks = []

  // fill array with random data
  init_all_companies_stocks(all_companies_stocks, num_companies);

  function preload () {
    game.load.image('logo', 'phaser.png');
  }

  function create () {
    var logo = game.add.sprite(game.world.centerX, game.world.centerY, 'logo');
    logo.anchor.setTo(0.5, 0.5);
  }

  function update() {
    update_all_companies_stocks(all_companies_stocks);
  }

  function render() {
    game.world.removeAll()
    display_all_companies_charts(game, all_companies_stocks);
  }

};
